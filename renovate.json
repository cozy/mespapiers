{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(feat)"
  ],
  "packageRules": [
    {
      "excludePackagePrefixes": [
        "cozy-"
      ],
      "extends": [
        "schedule:monthly"
      ],
      "rangeStrategy": "pin",
      "prHourlyLimit": 1
    },
    {
      "matchPackagePrefixes": [
        "cozy-"
      ],
      "extends": [
        ":disableDependencyDashboard"
      ],
      "rangeStrategy": "bump",
      "schedule": "at any time",
      "prHourlyLimit": 0
    }
  ],
  "timezone": "Europe/Paris",
  "addLabels": [
    "dependencies"
  ],
  "updateNotScheduled": false
}
